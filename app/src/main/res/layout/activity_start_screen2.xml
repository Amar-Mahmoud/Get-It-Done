<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StartScreen">

    <LinearLayout
        android:id="@+id/getStartedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="349dp"
            android:layout_height="416dp"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            android:layout_marginTop="84dp"
            app:srcCompat="@drawable/undraw_female_avatar_re_9amj" />

        <LinearLayout
            android:id="@+id/nextSectionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/staticHelloText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/roboto_thin"
                android:text="Create Your Profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25sp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/cbNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:button="@drawable/custom_checkbox"
                    android:buttonTint="@color/blue"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="15sp"
                    android:textAlignment="textStart"
                    android:text="Enable Reminder Notifcations"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="18sp"
                    android:backgroundTint="@color/blue"
                    android:elevation="0sp"
                    android:fontFamily="@font/roboto_medium"
                    android:shadowRadius="2"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>